	<h2>Archives</h2>
	
	<article>
		<ul>
		<% for article in @archives %>
			<li><time datetime="<%= t = article.created_at; t.xmlschema %>"><%= t.strftime("%B") + " " + apply_ordinal(t.strftime("%d")) + ", " + t.strftime("%Y") %></time> &mdash; <a href="/post/<%= article.url %>"><%= article.title %></a></li>
		<% end %>
		</ul>
	</article>
	<hr>